<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_home"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_home"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:src="@drawable/selecter_maintab0"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="首页"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_classify"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/img_classify"
            android:layout_width="@dimen/dp_20"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_centerHorizontal="true"
            android:layout_height="@dimen/dp_18"
            android:src="@drawable/selecter_maintab1"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_classify"
            android:layout_marginTop="@dimen/dp_4"
            android:layout_centerHorizontal="true"
            android:text="洗衣"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_10"/>

        <TextView
            android:id="@+id/all_unread_number"
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:layout_toRightOf="@+id/img_classify"
            android:layout_marginTop="@dimen/dp_4"
            android:textColor="@color/color_ffffff"
            android:textSize="@dimen/dp_8"
            android:gravity="center"
            android:background="@drawable/unread_msg_red"
            android:visibility="gone"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_car"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_car"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/selecter_maintab3"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="购物车"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_mine"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_49"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_49"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/img_mine"
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_18"
                android:layout_marginTop="@dimen/dp_10"
                android:src="@drawable/selecter_maintab4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="我的"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_10"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>